@model PengKep.BusinessEntities.OrganizationUnit


<div id="modal-create" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @*<h4 class="modal-title">Modal title</h4>*@
            </div>
            <div class="modal-body">
                <div data-ng-show="addedModel">


                    <div class="alert alert-danger" data-ng-show="errorMessage">
                        {{ errorMessage }}
                    </div>

                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.OrganizationUnitID, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" data-ng-model="addedModel.OrganizationUnitID">
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.OrganizationUnitName, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" data-ng-model="addedModel.OrganizationUnitName">
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.OrganizationUnitParentID, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                <select class="form-control" data-ng-model="addedModel.OrganizationUnitParentID">
                                    <option value=""></option>
                                    <option data-ng-repeat="item in model" value="{{ item.OrganizationUnitID }}">{{ item.OrganizationUnitName.trim() }}</option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-ng-click="save()" data-ng-show="addedModel" data-ng-disabled="isSaving" title="Save"><i class="glyphicon glyphicon-save"></i>&nbsp;{{ (!isSaving ? 'Save' : 'Please wait..') }}</button>
                <button class="btn btn-default" data-dismiss="modal" data-ng-disabled="isSaving"><i class="glyphicon glyphicon-remove"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>