@model PengKep.BusinessEntities.ApplicationUser

<div id="modal-edit" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @*<h4 class="modal-title">Modal title</h4>*@
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" data-ng-show="errorMessage">{{ errorMessage }}</div>
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Email, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            <div style="padding-top: 5px">
                                {{ editedModel.Email }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Roles, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            <div class="checkbox" ng-repeat="item in roles">
                                <label>
                                    <input type="checkbox" value="{{ item.Id }}" title="{{ item.Description }}" ng-click="toggleSelection(item, $event)" ng-checked="isChecked(item)" /> {{ item.Name }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-ng-click="update()" data-ng-disabled="isSaving" title="Save"><i class="glyphicon glyphicon-save"></i>&nbsp;{{ (!isSaving ? 'Update' : 'Please wait..') }}</button>
                <button class="btn btn-default" data-dismiss="modal" data-ng-disabled="isSaving"><i class="glyphicon glyphicon-remove"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>

